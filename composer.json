{
    "name": "ojullien/container-builder-bridge",
    "description": "A bridge to easily work with multiple types of PSR-11 container builder.",
    "keywords": [
        "bridge",
        "PSR-11 container builder"
    ],
    "homepage": "https://github.com/ojullien/container-builder-bridge",
    "readme": "README.md",
    "time": "2021-11-01",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/ojullien/container-builder-bridge/issues",
        "source": "https://github.com/ojullien/container-builder-bridge",
        "rss": "https://github.com/ojullien/container-builder-bridge/releases.atom"
    },
    "authors": [
        {
            "name": "Olivier Jullien",
            "homepage": "https://github.com/ojullien",
            "email": "ojullien@netcourrier.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ojullien\\ContainerBuilderBridge\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/php-invoker": "^3.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.12"
    },
    "autoload-dev": {
        "psr-4": {
            "OjullienTest\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "check-cs": "vendor/bin/phpcs --standard=linters/phpcs.xml --report=checkstyle --report-file=var/log/phpcs_report.xml",
        "fix-cs": [
            "@squizlabs"
        ],
        "psalm": "vendor/bin/psalm --config=linters/psalm.xml --threads=4 --show-info=true",
        "psalm_baseline": "vendor/bin/psalm --config=linters/psalm.xml --show-info=true --set-baseline=linters/psalm-baseline.xml",
        "squizlabs": "vendor/bin/phpcbf --standard=linters/phpcs.xml --no-cache",
        "stan": "vendor/bin/phpstan analyse -c linters/phpstan.neon --no-progress --xdebug",
        "stan-baseline": "vendor/bin/phpstan analyse -c linters/phpstan.neon --no-progress --xdebug --generate-baseline var/log/phpstan-baseline.neon",
        "test": "vendor/bin/phpunit --configuration phpunit.xml --coverage-clover var/log/phpunit-clover.xml"
    }
}